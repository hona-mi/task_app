 <h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @plan.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @plan.starting_date %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= @plan.ending_date %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><%= @plan.checkbox ? "◯" : "ー" %></td>
      </tr>
      <tr>
      <th>スケジュールメモ</th>
      <td><%= @plan.introduction %></td> 
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "スケジュール一覧に戻る", :plans %></li>
      </ul>
    </div>
